      <br>
      <input type="button" id="searchButton" value="조회" onclick="searchBus();">
      <br><br>
    </form>
    <div id="busTable"></div>
    <footer>
      <%- include('forms/footer'); -%>
    </footer>
  </body>
  <% if (message) {  %>
  <script type="text/javascript">
    alert("<%= message %>");
    window.location.href = "/"
  </script>
  <% } %>
</html>
